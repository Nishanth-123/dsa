#define ll int
class Solution {
public:
    
public:
    int minimumTotal(vector<vector<int>>& arr) {
        ll n=arr.size();
        for(ll i=n-2;i>=0;i--){
            
            for(ll j=arr[i].size()-1;j>=0;j--){
                
                arr[i][j]+=min(arr[i+1][j], arr[i+1][j+1]);
            }
        }
        return arr[0][0];
    }
};
